<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.it114.android.oneframework.sample1"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:name="com.it114.android.oneframework.core.OneApplication">
        <activity android:name=".demo.serverrequest.RequestActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".demo.main.MainActivity"></activity>
        <activity android:name=".demo.titlebar.TitleBarActivity"></activity>
        <activity android:name=".demo.fragment.MyFragmentActivity"></activity>
        <activity android:name=".demo.adapter.AdapterActivity"></activity>
        <activity android:name=".demo.webview.WebViewActivity"></activity>
        <!--<activity android:name=".demo.serverrequest.RequestActivity"></activity>-->
    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

</manifest>
